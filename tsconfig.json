{
  "compilerOptions": {
    "target": "ES2019", // Node 12
    "pretty": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "declaration": true,
    "lib": [
      "esnext",
    ],
    "outDir": "./lib",
    "baseUrl": "./src",
  },
  "exclude": [
    "node_modules",
    "__tests__",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
